{
    "name": "rdnine/lux",
    "description": "The next PHP Micro-Framework for fast development",
    "type": "framework",
    "license": "MIT",
    "authors": [
        {
            "name": "Rafael Duarte",
            "email": "rafael@rdnine.dev"
        }
    ],
    "require": {
      "php": "^7.2"
    },
    "config": {
      "vendor-dir": "./vendor/",
      "optimize-autoloader": true,
      "preferred-install": "dist",
      "sort-packages": true
    },
    "autoload": {
      "psr-4": {
        "App\\": "app/",
        "Core\\": "core/"
      },
      "files": ["core/Helpers.php"]
    }
}
